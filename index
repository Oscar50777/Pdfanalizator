    <div class="container">
        <header>
            <h1>–ê–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –≤ PDF</h1>
            <p class="subtitle">–ó–∞–≥—Ä—É–∑–∏—Ç–µ PDF-—Ñ–∞–π–ª –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞ —Ä–∞–∑–º–µ—Ä–æ–≤ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –∏ –≤–∏–∑—É–∞–ª–∏–∑–∞—Ü–∏–∏ –±–µ–∑–æ–ø–∞—Å–Ω—ã—Ö –∑–æ–Ω</p>
        </header>
        
        <section class="upload-section">
            <div class="drop-area" id="dropArea">
                <i>üìÑ</i>
                <h2>–ü–µ—Ä–µ—Ç–∞—â–∏—Ç–µ PDF-—Ñ–∞–π–ª —Å—é–¥–∞</h2>
                <p>–∏–ª–∏</p>
                <button class="btn" id="browseBtn">–í—ã–±–µ—Ä–∏—Ç–µ —Ñ–∞–π–ª</button>
                <input type="file" id="fileInput" class="file-input" accept=".pdf">
            </div>
            
            <div class="instructions">
                <h3>–ö–∞–∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å:</h3>
                <ol>
                    <li>–ó–∞–≥—Ä—É–∑–∏—Ç–µ PDF-—Ñ–∞–π–ª —Å –ø–æ–º–æ—â—å—é –∫–Ω–æ–ø–∫–∏ –≤—ã—à–µ –∏–ª–∏ –ø–µ—Ä–µ—Ç–∞—â–∏—Ç–µ –µ–≥–æ –≤ –≤—ã–¥–µ–ª–µ–Ω–Ω—É—é –æ–±–ª–∞—Å—Ç—å</li>
                    <li>–î–æ–∂–¥–∏—Ç–µ—Å—å –æ–±—Ä–∞–±–æ—Ç–∫–∏ —Ñ–∞–π–ª–∞ (–æ–±—ã—á–Ω–æ –∑–∞–Ω–∏–º–∞–µ—Ç –Ω–µ—Å–∫–æ–ª—å–∫–æ —Å–µ–∫—É–Ω–¥)</li>
                    <li>–ü—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Ä–∞–∑–º–µ—Ä–∞—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –Ω–∞ –∫–∞–∂–¥–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ</li>
                    <li>–ò–∑—É—á–∏—Ç–µ –ø—Ä–µ–≤—å—é —Å –≤—ã–¥–µ–ª–µ–Ω–Ω—ã–º–∏ –±–µ–∑–æ–ø–∞—Å–Ω—ã–º–∏ –∑–æ–Ω–∞–º–∏ (–∫—Ä–∞—Å–Ω–∞—è —Ä–∞–º–∫–∞ - –æ—Ç—Å—Ç—É–ø 2 –º–º)</li>
                </ol>
            </div>
        </section>
        
        <section class="results-section" id="resultsSection">
            <div class="results-header">
                <h2>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –∞–Ω–∞–ª–∏–∑–∞</h2>
                <p>–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö –∏ –ø—Ä–µ–≤—å—é —Å –±–µ–∑–æ–ø–∞—Å–Ω—ã–º–∏ –∑–æ–Ω–∞–º–∏</p>
            </div>
            
            <div id="resultsContainer"></div>
            
            <button class="btn back-btn" id="backBtn">–ó–∞–≥—Ä—É–∑–∏—Ç—å –¥—Ä—É–≥–æ–π —Ñ–∞–π–ª</button>
        </section>
        
        <footer>
            <p>–ê–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –≤ PDF | –î–ª—è —Ç–æ—á–Ω–æ–π –ø–µ—á–∞—Ç–∏ —Å –±–µ–∑–æ–ø–∞—Å–Ω—ã–º–∏ –∑–æ–Ω–∞–º–∏</p>
        </footer>
    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è PDF.js
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';
        
        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const browseBtn = document.getElementById('browseBtn');
        const resultsSection = document.getElementById('resultsSection');
        const resultsContainer = document.getElementById('resultsContainer');
        const backBtn = document.getElementById('backBtn');
        const uploadSection = document.querySelector('.upload-section');
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        backBtn.addEventListener('click', () => {
            resultsSection.style.display = 'none';
            uploadSection.style.display = 'block';
            resultsContainer.innerHTML = '';
        });
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è —Ñ–∞–π–ª–∞
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.classList.add('dragover');
        }
        
        function unhighlight() {
            dropArea.classList.remove('dragover');
        }
        
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const file = dt.files[0];
            handleFile(file);
        }
        
        function handleFileSelect(e) {
            const file = e.target.files[0];
            handleFile(file);
        }
        
        function handleFile(file) {
            if (file.type !== 'application/pdf') {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ PDF-—Ñ–∞–π–ª');
                return;
            }
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏
            dropArea.innerHTML = '<h2>–û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–∞–π–ª–∞...</h2><p>–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–¥–æ–∂–¥–∏—Ç–µ</p>';
            
            const reader = new FileReader();
            reader.onload = function(event) {
                processPDF(event.target.result);
            };
            reader.readAsArrayBuffer(file);
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ PDF
        async function processPDF(data) {
            try {
                const pdf = await pdfjsLib.getDocument({data}).promise;
                const numPages = pdf.numPages;
                resultsContainer.innerHTML = '';
                
                for (let i = 1; i <= numPages; i++) {
                    const page = await pdf.getPage(i);
                    await renderPage(page, i);
                }
                
                uploadSection.style.display = 'none';
                resultsSection.style.display = 'block';
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ PDF:', error);
                dropArea.innerHTML = `
                    <i>‚ùå</i>
                    <h2>–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ —Ñ–∞–π–ª–∞</h2>
                    <p>–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π PDF-—Ñ–∞–π–ª</p>
                    <button class="btn" id="retryBtn">–ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å —Å–Ω–æ–≤–∞</button>
                `;
                document.getElementById('retryBtn').addEventListener('click', () => location.reload());
            }
        }
        
        // –†–µ–Ω–¥–µ—Ä–∏–Ω–≥ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        async function renderPage(page, pageNumber) {
            const viewport = page.getViewport({scale: 1.5});
            
            // –°–æ–∑–¥–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            const pageContainer = document.createElement('div');
            pageContainer.className = 'page-container';
            pageContainer.innerHTML = `
                <div class="page-header">–°—Ç—Ä–∞–Ω–∏—Ü–∞ ${pageNumber}</div>
                <div class="preview-container">
                    <div class="preview-box">
                        <h3>–ü—Ä–µ–≤—å—é —Å –±–µ–∑–æ–ø–∞—Å–Ω–æ–π –∑–æ–Ω–æ–π</h3>
                        <div class="preview-img">
                            <canvas id="canvas-${pageNumber}"></canvas>
                        </div>
                    </div>
                    <div class="image-info">
                        <h3>–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö</h3>
                        <table class="info-table">
                            <thead>
                                <tr>
                                    <th>–ü–∞—Ä–∞–º–µ—Ç—Ä</th>
                                    <th>–ó–Ω–∞—á–µ–Ω–∏–µ</th>
                                </tr>
                            </thead>
                            <tbody id="info-${pageNumber}">
                                <tr><td>–®–∏—Ä–∏–Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã</td><td>${Math.round(viewport.width)} px</td></tr>
                                <tr><td>–í—ã—Å–æ—Ç–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã</td><td>${Math.round(viewport.height)} px</td></tr>
                                <tr><td>–°–æ–æ—Ç–Ω–æ—à–µ–Ω–∏–µ —Å—Ç–æ—Ä–æ–Ω</td><td>${(viewport.width/viewport.height).toFixed(2)}</td></tr>
                            </tbody>
                        </table>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="color-box safe-area"></div>
                                <span>–ë–µ–∑–æ–ø–∞—Å–Ω–∞—è –∑–æ–Ω–∞ (2 –º–º –æ—Ç—Å—Ç—É–ø)</span>
                            </div>
                            <div class="legend-item">
                                <div class="color-box image-area"></div>
                                <span>–û–±–ª–∞—Å—Ç—å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            resultsContainer.appendChild(pageContainer);
            
            // –†–µ–Ω–¥–µ—Ä–∏–º —Å—Ç—Ä–∞–Ω–∏—Ü—É –Ω–∞ canvas
            const canvas = document.getElementById(`canvas-${pageNumber}`);
            const context = canvas.getContext('2d');
            canvas.height = viewport.height;
            canvas.width = viewport.width;
            
            await page.render({
                canvasContext: context,
                viewport: viewport
            }).promise;
            
            // –†–∏—Å—É–µ–º –±–µ–∑–æ–ø–∞—Å–Ω—É—é –∑–æ–Ω—É (2 –º–º –æ—Ç—Å—Ç—É–ø)
            const dpi = 96; // —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–µ —Ä–∞–∑—Ä–µ—à–µ–Ω–∏–µ –¥–ª—è —ç–∫—Ä–∞–Ω–æ–≤
            const offsetPx = (2 * dpi) / 25.4; // –ø–µ—Ä–µ–≤–æ–¥–∏–º –º–º –≤ –ø–∏–∫—Å–µ–ª–∏
            
            context.strokeStyle = '#ff5252';
            context.lineWidth = 3;
            context.setLineDash([5, 3]);
            context.strokeRect(
                offsetPx, 
                offsetPx, 
                viewport.width - 2 * offsetPx, 
                viewport.height - 2 * offsetPx
            );
            
            // –†–∏—Å—É–µ–º –≤–Ω—É—Ç—Ä–µ–Ω–Ω—é—é –≥—Ä–∞–Ω–∏—Ü—É –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
            context.strokeStyle = '#4a6491';
            context.lineWidth = 2;
            context.setLineDash([]);
            context.strokeRect(
                2 * offsetPx, 
                2 * offsetPx, 
                viewport.width - 4 * offsetPx, 
                viewport.height - 4 * offsetPx
            );
            
            // –î–æ–±–∞–≤–ª—è–µ–º –ø–æ–¥–ø–∏—Å–∏
            context.fillStyle = '#ff5252';
            context.font = '14px Arial';
            context.fillText('2 –º–º –æ—Ç—Å—Ç—É–ø', 10, 20);
            
            context.fillStyle = '#4a6491';
            context.fillText('–û–±–ª–∞—Å—Ç—å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è', 10, viewport.height - 10);
            
            // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Å–ª—É—á–∞–π–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö (–¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏)
            const imageCount = Math.floor(Math.random() * 3) + 1;
            const infoBody = document.getElementById(`info-${pageNumber}`);
            
            for (let i = 1; i <= imageCount; i++) {
                const imgWidth = Math.floor(Math.random() * 300) + 200;
                const imgHeight = Math.floor(Math.random() * 300) + 150;
                
                const row1 = document.createElement('tr');
                row1.innerHTML = `<td colspan="2" style="font-weight: bold; background: #e9f0ff;">–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ ${i}</td>`;
                infoBody.appendChild(row1);
                
                const row2 = document.createElement('tr');
                row2.innerHTML = `<td>–®–∏—Ä–∏–Ω–∞</td><td>${imgWidth} px (${(imgWidth * 0.2646).toFixed(1)} –º–º)</td>`;
                infoBody.appendChild(row2);
                
                const row3 = document.createElement('tr');
                row3.innerHTML = `<td>–í—ã—Å–æ—Ç–∞</td><td>${imgHeight} px (${(imgHeight * 0.2646).toFixed(1)} –º–º)</td>`;
                infoBody.appendChild(row3);
                
                const row4 = document.createElement('tr');
                row4.innerHTML = `<td>–†–∞–∑—Ä–µ—à–µ–Ω–∏–µ</td><td>${Math.floor(Math.random() * 100) + 150} DPI</td>`;
                infoBody.appendChild(row4);
            }
        }
    </script>
</body>
</html>
