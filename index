        <div class="loading" id="loading">
            <div class="spinner"></div>
            <h3>–û–±—Ä–∞–±–æ—Ç–∫–∞ PDF-—Ñ–∞–π–ª–∞...</h3>
            <p>–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–¥–æ–∂–¥–∏—Ç–µ. –≠—Ç–æ –º–æ–∂–µ—Ç –∑–∞–Ω—è—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ —Å–µ–∫—É–Ω–¥.</p>
        </div>
        
        <section class="results-section" id="resultsSection">
            <div class="results-header">
                <h2>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –∞–Ω–∞–ª–∏–∑–∞</h2>
                <p>–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö –∏ –ø—Ä–µ–≤—å—é —Å –±–µ–∑–æ–ø–∞—Å–Ω—ã–º–∏ –∑–æ–Ω–∞–º–∏</p>
            </div>
            
            <div id="resultsContainer"></div>
            
            <button class="btn back-btn" id="backBtn">–ó–∞–≥—Ä—É–∑–∏—Ç—å –¥—Ä—É–≥–æ–π —Ñ–∞–π–ª</button>
        </section>
        
        <footer>
            <p>–ê–Ω–∞–ª–∏–∑–∞—Ç–æ—Ä –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –≤ PDF | –°–ø–µ—Ü–∏–∞–ª—å–Ω–æ –∞–¥–∞–ø—Ç–∏—Ä–æ–≤–∞–Ω–æ –¥–ª—è GitHub Pages</p>
        </footer>
    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è PDF.js
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';
        
        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const browseBtn = document.getElementById('browseBtn');
        const resultsSection = document.getElementById('resultsSection');
        const resultsContainer = document.getElementById('resultsContainer');
        const backBtn = document.getElementById('backBtn');
        const uploadSection = document.getElementById('uploadSection');
        const loading = document.getElementById('loading');
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
        browseBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        backBtn.addEventListener('click', () => {
            resultsSection.style.display = 'none';
            uploadSection.style.display = 'block';
            resultsContainer.innerHTML = '';
        });
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è —Ñ–∞–π–ª–∞
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.classList.add('dragover');
        }
        
        function unhighlight() {
            dropArea.classList.remove('dragover');
        }
        
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const file = dt.files[0];
            handleFile(file);
        }
        
        function handleFileSelect(e) {
            const file = e.target.files[0];
            handleFile(file);
        }
        
        function handleFile(file) {
            if (!file) return;
            
            if (file.type !== 'application/pdf') {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ PDF-—Ñ–∞–π–ª');
                return;
            }
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≥—Ä—É–∑–∫–∏
            uploadSection.style.display = 'none';
            loading.style.display = 'block';
            resultsSection.style.display = 'none';
            
            const reader = new FileReader();
            reader.onload = function(event) {
                processPDF(event.target.result);
            };
            reader.readAsArrayBuffer(file);
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ PDF
        async function processPDF(data) {
            try {
                const pdf = await pdfjsLib.getDocument({data}).promise;
                const numPages = pdf.numPages;
                resultsContainer.innerHTML = '';
                
                for (let i = 1; i <= numPages; i++) {
                    const page = await pdf.getPage(i);
                    await renderPage(page, i);
                }
                
                loading.style.display = 'none';
                resultsSection.style.display = 'block';
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ PDF:', error);
                loading.style.display = 'none';
                uploadSection.style.display = 'block';
                
                dropArea.innerHTML = `
                    <i>‚ùå</i>
                    <h2>–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ —Ñ–∞–π–ª–∞</h2>
                    <p>${error.message || '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π PDF-—Ñ–∞–π–ª'}</p>
                    <button class="btn" id="retryBtn">–ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å —Å–Ω–æ–≤–∞</button>
                `;
                document.getElementById('retryBtn').addEventListener('click', () => location.reload());
            }
        }
        
        // –†–µ–Ω–¥–µ—Ä–∏–Ω–≥ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        async function renderPage(page, pageNumber) {
            const viewport = page.getViewport({scale: 1.5});
            
            // –°–æ–∑–¥–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            const pageContainer = document.createElement('div');
            pageContainer.className = 'page-container';
            pageContainer.innerHTML = `
                <div class="page-header">
                    <div>–°—Ç—Ä–∞–Ω–∏—Ü–∞ ${pageNumber}</div>
                    <div>${Math.round(viewport.width)} √ó ${Math.round(viewport.height)} –ø–∏–∫—Å–µ–ª–µ–π</div>
                </div>
                <div class="preview-container">
                    <div class="preview-box">
                        <h3>–ü—Ä–µ–≤—å—é —Å –±–µ–∑–æ–ø–∞—Å–Ω–æ–π –∑–æ–Ω–æ–π</h3>
                        <div class="preview-img">
                            <canvas id="canvas-${pageNumber}"></canvas>
                        </div>
                    </div>
                    <div class="image-info">
                        <h3>–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö</h3>
                        <table class="info-table">
                            <thead>
                                <tr>
                                    <th>–ü–∞—Ä–∞–º–µ—Ç—Ä</th>
                                    <th>–ó–Ω–∞—á–µ–Ω–∏–µ</th>
                                </tr>
                            </thead>
                            <tbody id="info-${pageNumber}">
                                <tr><td>–®–∏—Ä–∏–Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã</td><td>${Math.round(viewport.width)} px</td></tr>
                                <tr><td>–í—ã—Å–æ—Ç–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—ã</td><td>${Math.round(viewport.height)} px</td></tr>
                                <tr><td>–†–∞–∑–º–µ—Ä –≤ –º–º (300 DPI)</td><td>${(viewport.width * 0.0847).toFixed(1)} √ó ${(viewport.height * 0.0847).toFixed(1)} –º–º</td></tr>
                            </tbody>
                        </table>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="color-box safe-area"></div>
                                <span>–ë–µ–∑–æ–ø–∞—Å–Ω–∞—è –∑–æ–Ω–∞ (2 –º–º –æ—Ç—Å—Ç—É–ø)</span>
                            </div>
                            <div class="legend-item">
                                <div class="color-box image-area"></div>
                                <span>–û–±–ª–∞—Å—Ç—å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            resultsContainer.appendChild(pageContainer);
            
            // –†–µ–Ω–¥–µ—Ä–∏–º —Å—Ç—Ä–∞–Ω–∏—Ü—É –Ω–∞ canvas
            const canvas = document.getElementById(`canvas-${pageNumber}`);
            const context = canvas.getContext('2d');
            canvas.height = viewport.height;
            canvas.width = viewport.width;
            
            await page.render({
                canvasContext: context,
                viewport: viewport
            }).promise;
            
            // –†–∏—Å—É–µ–º –±–µ–∑–æ–ø–∞—Å–Ω—É—é –∑–æ–Ω—É (2 –º–º –æ—Ç—Å—Ç—É–ø)
            const dpi = 96; // —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–µ —Ä–∞–∑—Ä–µ—à–µ–Ω–∏–µ –¥–ª—è —ç–∫—Ä–∞–Ω–æ–≤
            const offsetPx = (2 * dpi) / 25.4; // –ø–µ—Ä–µ–≤–æ–¥–∏–º –º–º –≤ –ø–∏–∫—Å–µ–ª–∏
            
            context.strokeStyle = '#ff5252';
            context.lineWidth = 3;
            context.setLineDash([5, 3]);
            context.strokeRect(
                offsetPx, 
                offsetPx, 
                viewport.width - 2 * offsetPx, 
                viewport.height - 2 * offsetPx
            );
            
            // –†–∏—Å—É–µ–º –≤–Ω—É—Ç—Ä–µ–Ω–Ω—é—é –≥—Ä–∞–Ω–∏—Ü—É –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
            context.strokeStyle = '#4a6491';
            context.lineWidth = 2;
            context.setLineDash([]);
            context.strokeRect(
                2 * offsetPx, 
                2 * offsetPx, 
                viewport.width - 4 * offsetPx, 
                viewport.height - 4 * offsetPx
            );
            
            // –î–æ–±–∞–≤–ª—è–µ–º –ø–æ–¥–ø–∏—Å–∏
            context.fillStyle = '#ff5252';
            context.font = 'bold 16px Arial';
            context.fillText('2 –º–º –æ—Ç—Å—Ç—É–ø', 15, 30);
            
            context.fillStyle = '#4a6491';
            context.fillText('–û–±–ª–∞—Å—Ç—å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è', 15, viewport.height - 15);
            
            // –ü–æ–ª—É—á–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è—Ö
            const operatorList = await page.getOperatorList();
            const images = [];
            
            // –ê–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã –¥–ª—è –ø–æ–∏—Å–∫–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
            for (let i = 0; i < operatorList.fnArray.length; i++) {
                if (operatorList.fnArray[i] === pdfjsLib.OPS.paintImageXObject) {
                    const imgName = operatorList.argsArray[i][0];
                    images.push(imgName);
                }
            }
            
            const infoBody = document.getElementById(`info-${pageNumber}`);
            
            if (images.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="2">–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω—ã</td>`;
                infoBody.appendChild(row);
            } else {
                // –î–ª—è –∫–∞–∂–¥–æ–≥–æ –Ω–∞–π–¥–µ–Ω–Ω–æ–≥–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
                for (let i = 0; i < images.length; i++) {
                    const imgName = images[i];
                    
                    try {
                        const img = await page.objs.get(imgName);
                        const width = img.width;
                        const height = img.height;
                        
                        const row1 = document.createElement('tr');
                        row1.innerHTML = `<td colspan="2" style="font-weight: bold; background: #e9f0ff;">–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ ${i + 1}</td>`;
                        infoBody.appendChild(row1);
                        
                        const row2 = document.createElement('tr');
                        row2.innerHTML = `<td>–†–∞–∑–º–µ—Ä –≤ –ø–∏–∫—Å–µ–ª—è—Ö</td><td>${width} √ó ${height} px</td>`;
                        infoBody.appendChild(row2);
                        
                        const row3 = document.createElement('tr');
                        row3.innerHTML = `<td>–†–∞–∑–º–µ—Ä –≤ –º–º (300 DPI)</td><td>${(width * 0.0847).toFixed(1)} √ó ${(height * 0.0847).toFixed(1)} –º–º</td>`;
                        infoBody.appendChild(row3);
                        
                        const row4 = document.createElement('tr');
                        row4.innerHTML = `<td>–°–æ–æ—Ç–Ω–æ—à–µ–Ω–∏–µ —Å—Ç–æ—Ä–æ–Ω</td><td>${(width/height).toFixed(2)}</td>`;
                        infoBody.appendChild(row4);
                    } catch (e) {
                        console.error('–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ–± –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–∏:', e);
                    }
                }
            }
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', () => {
            // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –¥–ª—è –∫–Ω–æ–ø–∫–∏ "–ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å –¥–µ–º–æ"
            const demoBtn = document.createElement('button');
            demoBtn.className = 'btn btn-accent';
            demoBtn.textContent = '–ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å –¥–µ–º–æ PDF';
            demoBtn.style.marginTop = '10px';
            demoBtn.addEventListener('click', loadDemoPDF);
            dropArea.appendChild(demoBtn);
        });
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ –¥–µ–º–æ PDF
        async function loadDemoPDF() {
            uploadSection.style.display = 'none';
            loading.style.display = 'block';
            
            try {
                // –°–æ–∑–¥–∞–µ–º –ø—Ä–æ—Å—Ç–æ–π PDF —Å –ø–æ–º–æ—â—å—é pdf-lib (–≤ –¥–µ–º–æ-—Ä–µ–∂–∏–º–µ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏–π PDF)
                const response = await fetch('https://raw.githubusercontent.com/mozilla/pdf.js/ba2edeae/examples/learning/helloworld.pdf');
                const arrayBuffer = await response.arrayBuffer();
                processPDF(arrayBuffer);
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–µ–º–æ PDF:', error);
                loading.style.display = 'none';
                uploadSection.style.display = 'block';
                alert('–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –¥–µ–º–æ PDF. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –∑–∞–≥—Ä—É–∑–∏—Ç—å —Å–≤–æ–π —Ñ–∞–π–ª.');
            }
        }
    </script>
</body>
</html>
